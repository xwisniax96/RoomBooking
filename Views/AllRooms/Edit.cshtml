@model RoomBooking.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" onclick="return confirmSave()">Save Changes</button>
</form>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to List</a>

<script type="text/javascript">
    function confirmSave() {
        return confirm('Are you sure you want to save the changes?');
    }
</script>