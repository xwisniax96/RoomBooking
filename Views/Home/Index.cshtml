@model IEnumerable<RoomBooking.Models.Room>

<h1>Rooms</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Capacity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Name</td>
                    <td>@room.Capacity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No rooms available.</p>
}

<a href="/Home/Create">Add New Room</a>
